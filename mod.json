{
	"geode": "3.8.1",
	"gd": {
		"win": "2.206",
		"android": "2.206",
		"mac": "2.206"
	},
	"id": "sawblade.dim_mode",
	"repository": "https://github.com/SawBlade21/dim-level",
	"name": "Dim Level",
	"version": "v1.0.1",
	"developer": "Sawblade",
	"description": "Dims the screen while playing a level.",
	"settings": {
		"enable-overlay": {
			"name": "Enable Dim Overlay",
			"description": "Enables the overlay that dims the screen.",
			"type": "bool",
			"default": true
		},
		"set-opacity": {
			"name": "Set Opacity (%)",
			"description": "Sets the dimness of the screen.",
			"type": "int",
			"default": 50,
			"min": 0,
			"max": 100,
			"control": {
                "slider": true
            }
		},
		"overlay-color": {
		"type": "rgb",
		"name": "Overlay Color",
		"description": "Sets the color of the screen overlay.",
		"default": "#000000"
		},
		"rgb": {
			"name": "RGB",
			"type": "bool",
			"description": "Makes the overlay RGB.",
			"default": false
		},
		"rgb-speed": {
			"name": "RGB Speed",
			"description": "How fast the color changes.",
			"type": "float",
			"default": 5,
			"min": 0.1,
			"max": 10,
			"control": {
				"arrows": true,
        		"arrow-step": 0.1,
        		"big-arrows": false,
        		"big-arrow-step": 0.5,
        		"slider": true,
        		"slider-step": 0.1,
        		"input": true
    		}
		},
		"show-opacity-button": {
			"name": "Show Settings Button",
			"description": "Shows the mod settings button in the pause menu settings.",
			"type": "bool",
			"default": true
		}
	},
	"dependencies": [
		{
            "id": "geode.node-ids",
            "version": ">=v1.15.0",
            "importance": "required"
        },
		{
			"id": "geode.custom-keybinds",
			"version": ">=1.9.0",
			"importance": "required"
		}
    ],
	"tags": [
		"gameplay",
		"offline",
		"utility",
		"customization"
	]
}
